<%= render :partial => "layouts/masthead" ,:locals => {
	:title => "Karyawan",
	:description => "Tambah informasi karyawan ke database"
}%>

<div id="content">

	<div class="container">
		<div class="row">
			
			<div class="span12">
				
				<%= link_to new_event_url, :class => "new_entry btn btn-primary" do %>
					<i class="icon-plus"></i>Event Baru
				<% end %> 
				<hr />
			</div>
		</div>
		
		<div class="row">
			
			<div class="span12">
				
		  <div id='calendar'></div>
			<%= hidden_field_tag 'events_url', events_url  %>
			 
				
			</div> <!-- /.span8 -->
			
			
			 
			
		</div> <!-- /.row -->
		
	
	</div> <!-- /.container -->

</div> <!-- /#content -->


